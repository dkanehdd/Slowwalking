<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="member.MemberImpl">
<!--  
	Mapper에서 파라미터를 처리하는 두번재 방법으로 
	전달되는 순서대로 index형태로 사용한다. 0부터 시작한다. 
-->
	<select id="list" resultType="member.MemberDTO">
		SELECT * FROM member
	</select>

	<!-- 어드민 회원 정보 수정 -->
	<select id="view" resultType="member.MemberDTO">
		SELECT * FROM member where id=#{id}
	</select>
	
	<!-- 어드민 회원 정보 수정 처리 -->
	<update id="modify" parameterType="member.MemberDTO">
		UPDATE member 
		SET pw=#{pw}, name=#{name}, 
		phone=#{phone} ,gender=#{gender} ,flag=#{flag}
		WHERE id=#{id}
	</update>
	
	<!-- 어드민 회원 정보 삭제 처리 -->
	<delete id="delete">
		DELETE FROM member WHERE id=#{id}
	</delete>
	
	
	<!--공지사항 리스트 출력  -->
	<select id="getTotalCount" resultType="int">
		SELECT COUNT(*) from multi_board
	</select>
	<select id="listPage" resultType="mutiBoard.MultiBoardDTO">
		select * from multi_board where flag='notice'
	</select>
	
	<!--공지사항 내용 보기  -->
	<select id="contentPage" resultType="mutiBoard.MultiBoardDTO">
		select * from multi_board where idx=#{idx}
	</select>
	
	<!-- 공지사항 조횟수 증가 -->
	<update id="contentCount" >
		UPDATE multi_board SET visitcount = visitcount+1 WHERE idx=#{idx}
	</update>
	
	
	
	<select id="checkId" resultType="int">
		SELECT count(*) from member where id=#{id}
	</select>
	
	<insert id=""></insert>
	
	<select id="flagValidate" resultType="String">
		SELECT flag FROM member WHERE id=#{0}
	</select>
	<select id="sitMem" resultType="member.SitterMemberDTO">
		SELECT * FROM sitterMember WHERE sitter_id=#{0}
	</select>
	
</mapper>